<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/filter_text_bg_color"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp">

    </LinearLayout>

    <com.suntiago.filterview.flowLayout.filter.FilterView
        android:id="@+id/province_filter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:autoSquare="true"
        app:contentTextBackgroundRes="@drawable/device_province_selector"
        app:contentTextMargin="10dp"
        app:contentTextSize="33dp"
        app:gravityCentre="true"/>
</LinearLayout>